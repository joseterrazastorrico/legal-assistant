# ============================================================================
# LLM Configuration
# ============================================================================
# OpenAI API Key (required if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (required if using Anthropic)  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Gemini API Key (required if using Gemini)  
GEMINI_API_KEY=your_gemini_api_key_here

# Default LLM provider (openai or anthropic)
DEFAULT_LLM_PROVIDER=openai

# Default model to use
DEFAULT_MODEL=gpt-4o-mini

# Default temperature for LLM responses (0.0 to 1.0)
DEFAULT_TEMPERATURE=0.1


# ============================================================================
# Logging Configuration
# ============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/legal_assistant.log
